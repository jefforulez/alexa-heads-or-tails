{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": [ "es2022", "dom" ],
    "module": "commonjs",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "baseUrl": "src",
    "outDir": "./built",
    "paths": {
      "@/*": [ "*" ]
    }
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ],

  "ts-node": {
    "require": [ "tsconfig-paths/register" ]
  }
}
